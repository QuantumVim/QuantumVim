local MethodService = require("qvim.lang.null-ls.methods")

---@class CodeAction : MethodService
local M = MethodService:init(require("null-ls").methods.CODE_ACTION)

local log = require("qvim.log")

function M:setup(action_configs)
	if vim.tbl_isempty(action_configs) then
		return
	end

	local registered = self:register_sources(action_configs)

	if #registered > 0 then
		log:debug("Registered the following action-handlers: " .. unpack(registered))
	end
end

return M
